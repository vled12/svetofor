#:kivy 1.0.9

<Light>:
    size: 120, 75
    size_hint: None, None
    rows:3
    Label:
        text:str(root.label)
    Label:
        text:str(root.time_left)
        color:root.color
    Button:
        text:'upd'

<StartScreen>:
    lightsView: lightsView
    entered_address:address
    GridLayout:
        rows:2
        orientation: 'vertical'
        size:root.size
        StackLayout:
            id:lightsView
            orientation: 'lr-tb'

        GridLayout:
            cols:2
            size_hint:1,0.2
            GridLayout:
                rows:3
                TextInput:
                    id:address
                TextInput:
                    id:gr_period
                TextInput:
                    id:rg_period
            Button:
                text: 'add'
                on_release: root.add_svetofor()




