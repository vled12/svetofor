#:kivy 1.0.9

<Light>:
    size: 120, 100
    size_hint: None, None
    rows:3
    Label:
        text:str(root.label)
    Label:
        text:str(root.time_left)
        color:root.color
    Button:
        text:'upd gr'
        on_press:root.correct_gr()
    Button:
        text:'upd rg'
        on_press:root.correct_rg()
    Button:
        text:'delete'
        on_press:root.die()

<StartScreen>:
    lightsView: lightsView
    entered_address:address
    gr_period:gr_period
    red_period:red_period
    GridLayout:
        rows:2
        orientation: 'vertical'
        size:root.size
        StackLayout:
            id:lightsView
            orientation: 'lr-tb'

        GridLayout:
            cols:2
            size_hint:1,0.2
            GridLayout:
                rows:3
                TextInput:
                    id:address
                    text:'address'
                TextInput:
                    id:gr_period
                    text:'green_period'
                TextInput:
                    id:red_period
                    text:'red_period'
            GridLayout:
                rows:2
                Button:
                    text: 'add'
                    on_release: root.add_svetofor()
                Button:
                    text: 'save'
                    on_release: root.save()




