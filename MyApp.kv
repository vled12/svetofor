#:import Factory kivy.factory.Factory

<ScreenManager>:
    id: sm

    Screen:
        name: 'screen_Primorsky 144'
        canvas.before:
            Color:
                rgb: .8, .2, .2
            Rectangle:
                size: self.size

        AnchorLayout:
            Button:
                size_hint: None, None
                size: '150dp', '48dp'
                text: 'Go to screen 2'
                on_release: sm.current = 'screen2'

    Screen:
        name: 'screen_Blagodatnaya 21'
        canvas.before:
            Color:
                rgb: .2, .8, .2
            Rectangle:
                size: self.size
        AnchorLayout:
            Button:
                size_hint: None, None
                size: '150dp', '48dp'
                text: 'Go to screen 1'
                on_release: sm.current = 'screen1'
